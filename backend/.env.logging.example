# FinGood Logging Configuration Example
# Copy this file to .env and update the values for your environment

# Core Application Configuration
SECRET_KEY=your_secret_key_generate_with_secrets_token_urlsafe_32
CSRF_SECRET_KEY=your_csrf_secret_key_generate_with_secrets_token_urlsafe_32
COMPLIANCE_SECRET_KEY=your_compliance_secret_key_generate_with_secrets_token_urlsafe_32

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/fingood
REDIS_URL=redis://localhost:6379

# Basic Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true
ENABLE_JSON_LOGGING=true
ENABLE_LOG_ROTATION=true
MAX_LOG_FILE_SIZE=104857600  # 100MB
LOG_BACKUP_COUNT=10

# Advanced Logging Features
ENABLE_SYSTEM_MONITORING=true
SYSTEM_METRICS_INTERVAL=60
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=true

# Security: Request/Response Body Logging (CAUTION: Security risk if enabled)
LOG_REQUEST_BODIES=false
LOG_RESPONSE_BODIES=false
MASK_SENSITIVE_DATA=true
MAX_LOG_BODY_SIZE=1048576  # 1MB

# Compliance and Audit Logging
ENABLE_COMPLIANCE_LOGGING=true
ENABLE_TRANSACTION_AUDIT=true
ENABLE_DIGITAL_SIGNATURES=false
AUDIT_RETENTION_YEARS=7

# Remote Logging and SIEM Integration
ENABLE_SYSLOG=false
SYSLOG_ADDRESS=/dev/log
ENABLE_REMOTE_LOGGING=false
REMOTE_LOG_URL=

# Log Filtering (comma-separated)
EXCLUDED_LOG_PATHS="/health,/metrics,/favicon.ico,/robots.txt,/ping,/status"
EXCLUDED_USER_AGENTS="HealthCheck,Monitoring,Pingdom,StatusCake,UptimeRobot"

# Example Production Settings (Comment out for development)
# LOG_LEVEL=WARNING
# ENABLE_CONSOLE_LOGGING=false
# ENABLE_SYSTEM_MONITORING=true
# ENABLE_SYSLOG=true
# SYSLOG_ADDRESS=your_syslog_server:514
# ENABLE_REMOTE_LOGGING=true
# REMOTE_LOG_URL=https://your-siem-system.com/api/logs
# ENABLE_DIGITAL_SIGNATURES=true