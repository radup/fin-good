# FinGood Environment Configuration
# Copy this file to .env and update the values for your environment

# Security Keys (REQUIRED - Generate secure values for production)
SECRET_KEY=your-secret-key-here-generate-new-one
CSRF_SECRET_KEY=your-csrf-secret-key-here-generate-new-one

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@hostname:port/database_name
REDIS_URL=redis://username:password@hostname:port/db_number

# Application Settings
DEBUG=true
APP_NAME=FinGood

# Cookie Security Settings
COOKIE_SECURE=false  # Set to true in production with HTTPS
COOKIE_DOMAIN=localhost  # Set to your domain in production

# External API Keys (Optional)
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=
XERO_CLIENT_ID=
XERO_CLIENT_SECRET=

# AI/ML Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# To generate secure keys, run:
# python -c "import secrets; print('SECRET_KEY=' + secrets.token_urlsafe(32))"
# python -c "import secrets; print('CSRF_SECRET_KEY=' + secrets.token_urlsafe(32))"